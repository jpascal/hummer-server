source 'https://rubygems.org'

gem 'rails', :github => "rails/rails", :ref => "v4.0.2"

gem 'pg'

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier'
end

gem 'jquery-rails'

# To use ActiveModel has_secure_password
gem 'bcrypt-ruby'

# Use puma as the app server
gem 'puma'

# Deploy with Capistrano
gem 'capistrano', '2.15.5'

# For authenticate users: Authlogic
gem 'authlogic'

# For store uploads: Carrierwave
gem 'carrierwave'

# For HAML template engine
gem 'haml-rails'

# Backup utility for database/uploads
gem 'dump'

# Pagginator
gem 'kaminari'

# Post tempest to Paste2
gem 'paste2'

# Add tags functionality
# in future need change to gem from github
gem 'acts-as-taggable-on', :github => "awt/acts-as-taggable-on"

# Nokogiri
gem 'nokogiri'

gem 'exception_notification'

gem 'net-ldap', :github => "globocom/ruby-net-ldap"
