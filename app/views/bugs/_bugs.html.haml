- if bugs.all.count > 0
  %table.table.table-condensed.table-hover
    %thead
      %tr
        %th Suite
        %th Test
        %th Bug
        - if current_user and not defined?(hide_users)
          %th Owner
        %th Linked
    %tbody
      - bugs.each do |bug|
        %tr
          %td
            - if bug.case.present?
              = link_to bug.suite.build, project_suite_path(bug.suite.project_id, bug.case.suite_id)
          %td
            - if bug.case.present?
              = link_to bug.name, project_suite_case_path(bug.suite.project_id, bug.case.suite_id,bug), :class => "case-#{bug.level}"
            - else
              %span{:class => "case-#{bug.level}"}
                = bug.name
            %td= link_to extract_tracker(bug.tracker), bug.tracker
          - if current_user and not defined?(hide_users)
            %td
              = link_to_user bug.user
          %td= l(bug.updated_at, :format => "%H:%M / %d.%m.%Y")
          %td.text-right{:style => "width: 1%;", :nowrap => true}
- else
  %p.well.text-center{:style => "margin-top: 20px;"}
    No bugs
- if bugs.respond_to? :current_page
  = paginate bugs

