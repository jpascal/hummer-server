.modal-header
  %button.close{:type=>:button, :data => {:dismiss=>"modal"}, :aria => {:hidden=>"true"}} &times;
  %h4.modal-title Description to case
= form_tag project_suite_case_description_path(@suite.project_id,@suite,@case), :remote => true, :method => :put, :class=>"form-horizontal", :role=>"form" do
  .modal-body
    .form-group{:style=>"margin-bottom: 0px;"}
      .col-lg-12
        = text_area_tag :description, @case.try(:description), :class => "form-control", :rows => 10, :style => "resize:vertical;"
  .modal-footer{:style=>"margin-top: 0px;"}
    - if @case.description
      = link_to "Delete", project_suite_case_description_path(@suite.project_id,@suite,@case), :class => "btn btn-default btn-danger", :remote => true, :method => :delete
    %button.btn.btn-default{:type=>:button, :data => {:dismiss=>"modal"}} Close
    %button.btn.btn-primary{:type=>:submit} Save
