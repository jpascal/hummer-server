.single-form
  %h2.text-center
    Login
  .well
    = form_for @session, :url => login_path do |f|
      = f.error_for_base :p, :class => "text-center"
      = f.block_for :email, :class => "form-group" do
        = f.label :email
        = f.error_for :email
        = f.text_field :email, :class => "form-control"
      = f.block_for :password, :class => "form-group" do
        = f.label :password
        = f.error_for :password
        = f.password_field :password, :class => "form-control"
      .checkbox
        %label
          = f.check_box :remember_me
          Remember me
      = f.submit "Login", :class => "btn btn-block btn-success"
