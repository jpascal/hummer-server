- if can?("suites", "edit", suite) || can?("suites", "reload", suite) || can?("suites", "destroy", suite)
  .btn-group
    %button.btn.btn-default.btn-xs.dropdown-toggle{:type=>:button, :data => { :toggle => :dropdown}}
      Actions
      %span.caret
    %ul.dropdown-menu{:role => :menu, :style => "text-align: left;"}
      %li= link_to "Edit", edit_project_suite_path(suite.project_id, suite) if can? "suites", "edit", suite
      %li= link_to "Reload", reload_project_suite_path(suite.project_id, suite) if can? "suites", "reload", suite
      - if can? "suites", "destroy", suite
        %li.divider
        %li= link_to "Delete", project_suite_path(suite.project_id, suite), :method => :delete, :data => {:confirm => "Are you sure?"}

=link_to "Download", suite.tempest.url, :class => "btn btn-default btn-xs"
=link_to "Compare", project_suite_compares_path(suite.project_id, suite), :class => "btn btn-info btn-xs"
=link_to "Paste2", paste_project_suite_path(suite.project_id, suite), :class => "btn btn-default btn-xs" if can? "suites", "paste", suite
