.content-header
  %h4 Suites
  - if can? :create, Suite
    .btn-group.pull-right
      %button.btn.btn-xs.btn-info.dropdown-toggle{:data => {:toggle => "dropdown"}}
        Add suite to
        %span.caret
      %ul.dropdown-menu{:role=>"menu"}
        - Project.all.each do |project|
          %li= link_to project.name, new_project_suite_path(project)

.content-border{:style => "padding-bottom: 15px"}
  - if @features.any?
    Feature filter:
    = link_to "all", suites_path, :class => "btn btn-xs #{params[:feature].present? ? "btn-default" : "btn-success"}"
    - @features.each do |feature|
      = link_to feature.name, suites_path(:feature => feature.name), :class => "btn btn-xs #{params[:feature] != feature.name ? "btn-default" : "btn-success"}"

.content-border
  .content-inside
    = render "suites", :suites => @suites, :columns => [:suite, :tests, :errors, :failures, :skipped, :passed, :user, :bugs, :project, :tests, :created]