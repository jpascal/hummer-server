= render "applications/breadcrumbs"
.masthead
  %ul.nav.nav-justified
    %li.search-tab
      %input.typeahead{:placeholder=>"Tap to search", :autocomplete=>"off", :spellcheck=>"false", :dir=>"auto", :data => {:source => search_suite_path(@suite), :limit => 10} }
    %li{:class => ("active" unless params[:type])}
      =link_to suite_path(@suite) do
        All
        %span.label.label-default= @suite.total_tests
    %li{:class => ("active" if params[:type] == "error")}
      =link_to suite_path(@suite, :type => "error") do
        Errors
        %span.label.label-danger= @suite.total_errors
    %li{:class => ("active" if params[:type] == "failure")}
      =link_to suite_path(@suite, :type => "failure") do
        Failures
        %span.label.label-warning= @suite.total_failures
    %li{:class => ("active" if params[:type] == "skipped")}
      =link_to suite_path(@suite, :type => "skipped") do
        Skip
        %span.label.label-info= @suite.total_skip
    %li{:class => ("active" if params[:type] == "passed")}
      =link_to suite_path(@suite, :type => "passed") do
        Passes
        %span.label.label-success= @suite.total_skip
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th Name/Class
      %th Tracker
      %th Time
  %tbody
    - @cases.each do |element|
      %tr
        %td
          = link_to element.name, suite_case_path(@suite, element), :class => "case-#{element.result.type}"
          - if element.tracker
            %br
            = link_to extract_tracker(element.tracker), element.tracker, :target => "_blank"
        %td= (element.classname unless element.name.start_with? "ContextSuite")
        %td= element.time
        %div{:id => "info-#{element.id}"}
= paginate @cases

